<UserControl x:Class="Race_Manager.TelemetryTable"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Race_Manager"
             mc:Ignorable="d">
    <UserControl.Resources>
        <Style x:Key="ColumnHeaderStyleBW" TargetType="DataGridColumnHeader">
            <Setter Property="Foreground" Value="Black"/>
        </Style>
    </UserControl.Resources>
    
    <DataGrid x:Name="dataGridTelemetry" HorizontalAlignment="Left" Margin="0" VerticalAlignment="Top" HorizontalGridLinesBrush="White" VerticalGridLinesBrush="White" Foreground="White" Background="Black" AlternatingRowBackground="#FF323232" RowBackground="Black" SelectionMode="Single" SelectionUnit="Cell" RowDetailsVisibilityMode="Visible" ClipboardCopyMode="IncludeHeader" HeadersVisibility="Column" ColumnHeaderStyle="{DynamicResource ColumnHeaderStyleBW}" CanUserResizeRows="False" CanUserAddRows="False" CanUserDeleteRows="False">
        <DataGrid.Effect>
            <DropShadowEffect/>
        </DataGrid.Effect>
    </DataGrid>

</UserControl>
